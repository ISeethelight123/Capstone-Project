	<!-- 收入总和 -->
	<update id="updateIncome">
		UPDATE profit SET income = (
		SELECT SUM(order_money)
		FROM orders WHERE MONTH(order_time) = 6
		)WHERE MONTH(MONTH) = 6
	</update>
	<!-- 支出总和 -->
	<update id="updateExpenses">
		UPDATE profit SET expenses =(
		SELECT
		SUM(expenses_money) FROM expenses WHERE MONTH(expenses_time) = 6
		)WHERE MONTH(MONTH) = 6
	</update>
	<!-- 修改利润 -->
	<update id="updateprofit">
		UPDATE profit SET profit = (
		SELECT SUM(order_money) FROM orders WHERE MONTH(order_time) = '6'
		) - (
		SELECT SUM(expenses_money) FROM expenses WHERE MONTH(expenses_time) = 6
		)
	</update>
